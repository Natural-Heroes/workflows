# Shopify MCP Server Configuration
# Multi-store support: comma-separated store identifiers
SHOPIFY_STORES=nl,dev

# Store: nl (Natural Heroes NL - Production)
SHOPIFY_STORE_NL_DOMAIN=natural-heroes-nl.myshopify.com
SHOPIFY_STORE_NL_TOKEN=shpat_your_token_here

# Store: dev (Development Store)
SHOPIFY_STORE_DEV_DOMAIN=dev-test-202050947.myshopify.com
SHOPIFY_STORE_DEV_TOKEN=shpat_your_token_here

# Default store (used when no store is specified in tool calls)
SHOPIFY_DEFAULT_STORE=nl

# Server Configuration
PORT=3001

# Environment
NODE_ENV=development
