{
  "name": "inventory-planner-mcp",
  "version": "0.1.0",
  "description": "MCP server for Inventory Planner demand forecasting and replenishment API",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "docker:build": "docker build -t inventory-planner-mcp .",
    "docker:run": "docker run -p 3000:3000 --env-file .env inventory-planner-mcp"
  },
  "keywords": [
    "mcp",
    "inventory-planner",
    "demand-forecasting",
    "replenishment",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.0",
    "express": "^4.21.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.3",
    "supertest": "^7.2.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18",
    "vitest-fetch-mock": "^0.4.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
